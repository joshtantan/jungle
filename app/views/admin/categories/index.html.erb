<section class="categories-show">

  <header class="page-header">
    <h1>Categories</h1>
  </header>

  <%= link_to '+ New Category', [:new, :admin, :category], class: 'btn btn-info' %>

  <ul>
    <% @categories.each do |category| %>
      <li><%= link_to category.name, category %></li>
    <% end %>
  </ul>

</section>
